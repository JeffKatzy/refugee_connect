.row
	.two.sixths
	.two.sixths
		%h1 Assignments
		- @user_assignments.each do |ua|
			- ua.assignment.bookpages.each do |page|
				- if page.photos.present?
					= cl_image_tag(page.photos.first.path, { size: '300x300' })
					.row
						%span Comment (click to edit)
						= best_in_place ua.comments.where(tutor_id: @auth.id).first, :comment_text, :type => :textarea, classes: 'background-gray'


